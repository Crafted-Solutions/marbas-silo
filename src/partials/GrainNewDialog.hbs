<div class="modal fade" id="grain-new" tabindex="-1" aria-labelledby="grain-new-title" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="grain-new-title">
					<span class="grain-new-mode grain-new-mode-generic">New Grain</span><span class="grain-new-mode grain-new-mode-type d-none" aria-hidden="true">New Grain Type</span><span class="grain-new-mode grain-new-mode-container d-none" aria-hidden="true">New Container</span>
					<div class="fs-6" id="grain-new-path"></div>
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<form class="modal-body needs-validation" action="#" onsubmit="return false;" novalidate>
				<div class="mb-3">
					<label for="grain-new-txt-name" class="form-label">Name</label>
					<input type="text" class="form-control" id="grain-new-txt-name" placeholder="Name for the new element" value="" aria-describedby="grain-new-txt-name-fb" required>
					<div id="grain-new-txt-name-fb" class="invalid-feedback">
						Please provide a name for the element
					</div>
				</div>
				<div class="mb-3 grain-new-mode grain-new-mode-generic">
					<span class="btn-group ms-1 mb-1 float-end"><button class="btn btn-sm btn-outline-secondary bi-arrow-clockwise" id="grain-new-btn-reload" type="button">Reload</button></span>
					<label for="grain-new-sel-type" class="col-form-label">Type</label>
					<nav id="grain-new-sel-type"></nav>
				</div>
			</form>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" id="grain-new-btn-ok">Ok</button>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cacnel</button>
			</div>
		</div>
	</div>
</div>
