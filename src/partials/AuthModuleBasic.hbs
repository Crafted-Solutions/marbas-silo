<div id="silo-auth" class="col-12 silo-noauth">
	<form class="needs-validation" action="#" onsubmit="return false;" novalidate>
		<h2 class="d-none">{{_ 'Connection'}}</h2>
		<div class="row row-cols-4 my-2">
			<label class="col-form-label col-sm-1 text-end" for="silo-auth-txt-user">{{_ 'User'}}</label>
			<div class="col-sm-5">
				<input id="silo-auth-txt-user" type="text" class="form-control" aria-describedby="silo-auth-txt-user-fb" placeholder="{{_ 'Login user name'}}" required>
				<div id="silo-auth-txt-user-fb" class="invalid-feedback">
					{{_ 'Please provide a valid user name'}}
				</div>
			</div>
			<label class="col-form-label col-sm-1 text-end" for="silo-auth-txt-pwd">{{_ 'Password'}}</label>
			<div class="col-sm-5">
				<input id="silo-auth-txt-pwd" type="password" class="form-control" aria-describedby="silo-auth-txt-pwd-fb" placeholder="{{_ 'Login password'}}" required>
				<div id="silo-auth-txt-pwd-fb" class="invalid-feedback">
					{{_ 'Please provide a valid password'}}
				</div>
			</div>
		</div>
		<div class="row row-cols-2 my-2">
			<label class="col-form-label col-sm-1 text-end" for="silo-auth-txt-url">{{_ 'Broker URL'}}</label>
			<div class="col-sm-11">
				<input id="silo-auth-txt-url" type="text" class="form-control" value="{{apiBaseUrl}}" aria-describedby="silo-auth-txt-url-fb" required>
				<div id="silo-auth-txt-url-fb" class="invalid-feedback">
					{{_ 'Please provide data broker URL'}}
				</div>
			</div>
		</div>
		<div class="my-2">
			<input id="silo-auth-btn-login" type="submit" class="btn btn-primary" value="{{_ 'Connect'}}">
			<input type="hidden" id="silo-auth-validation" class="form-control" aria-describedby="silo-auth-validation-fb">
			<div id="silo-auth-validation-fb" class="invalid-feedback">
				{{_ 'Invalid user or password'}}
			</div>
		</div>
	</form>
</div>