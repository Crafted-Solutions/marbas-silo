<div id="silo-lang" class="silo-auth btn-toolbar flex-nowrap col-4 d-none" aria-hidden="true">
	<label class="d-none" for="silo-lang-sel">Language</label>
	<select id="silo-lang-sel" class="form-select d-inline-flex" title="Language">
		<option value="en">English</option>
	</select>
	<div id="silo-lang-commands" class="btn-group ms-2 d-none" role="group" aria-label="Manage languages" aria-hidden="true">
		<button id="cmdAddLang" type="button" class="btn btn-outline-success" title="Add Language"><span class="bi-plus"></span></button>
		<button id="cmdDeleteLang" type="button" class="btn btn-outline-danger" title="Delete Selected Language" disabled><span class="bi-x"></span></button>
	</div>
</div>